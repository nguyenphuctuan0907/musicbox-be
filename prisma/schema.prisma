generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

model bill {
  id              Int            @id @default(autoincrement())
  start           DateTime
  end             DateTime?
  boxId           Int
  creatorId       Int
  subtotal        Int
  discountAmount  Int            @default(0)
  discountPercent Float?
  total           Int
  status          String         @default("draft")
  createdAt       DateTime       @default(now())
  box             box            @relation(fields: [boxId], references: [id], map: "Bill_boxId_fkey")
  user            user           @relation(fields: [creatorId], references: [id], map: "Bill_creatorId_fkey")
  billdiscount    billdiscount[]
  billdish        billdish[]

  @@index([boxId], map: "Bill_boxId_fkey")
  @@index([creatorId], map: "Bill_creatorId_fkey")
}

model billdiscount {
  id            Int       @id @default(autoincrement())
  billId        Int
  discountId    Int?
  appliedAmount Int
  note          String?
  createdAt     DateTime  @default(now())
  bill          bill      @relation(fields: [billId], references: [id], map: "BillDiscount_billId_fkey")
  discount      discount? @relation(fields: [discountId], references: [id], map: "BillDiscount_discountId_fkey")

  @@index([billId], map: "BillDiscount_billId_fkey")
  @@index([discountId], map: "BillDiscount_discountId_fkey")
}

model billdish {
  id       Int  @id @default(autoincrement())
  billId   Int
  dishId   Int
  quantity Int
  bill     bill @relation(fields: [billId], references: [id], map: "BillDish_billId_fkey")
  dish     dish @relation(fields: [dishId], references: [id], map: "BillDish_dishId_fkey")

  @@index([billId], map: "BillDish_billId_fkey")
  @@index([dishId], map: "BillDish_dishId_fkey")
}

model box {
  id                  Int                @id @default(autoincrement())
  name                String
  defaultPricePerHour Int
  createdAt           DateTime           @default(now())
  bill                bill[]
  boxpriceinterval    boxpriceinterval[]
}

model boxpriceinterval {
  id           Int       @id @default(autoincrement())
  boxId        Int
  name         String?
  pricePerHour Int
  startTime    String
  endTime      String
  daysOfWeek   String?
  startDate    DateTime?
  endDate      DateTime?
  priority     Int       @default(0)
  active       Boolean   @default(true)
  createdAt    DateTime  @default(now())
  box          box       @relation(fields: [boxId], references: [id], map: "BoxPriceInterval_boxId_fkey")

  @@index([boxId], map: "BoxPriceInterval_boxId_fkey")
}

model discount {
  id           Int            @id @default(autoincrement())
  code         String?
  name         String?
  type         String
  value        Float
  maxAmount    Int?
  startsAt     DateTime?
  endsAt       DateTime?
  active       Boolean        @default(true)
  appliesTo    String?
  createdBy    Int?
  createdAt    DateTime       @default(now())
  billdiscount billdiscount[]
  user         user?          @relation(fields: [createdBy], references: [id], map: "Discount_createdBy_fkey")

  @@index([createdBy], map: "Discount_createdBy_fkey")
}

model dish {
  id        Int        @id @default(autoincrement())
  name      String
  price     Int
  createdAt DateTime   @default(now())
  billdish  billdish[]
}

model user {
  id        Int        @id @default(autoincrement())
  username  String
  role      user_role?
  createdAt DateTime   @default(now())
  password  String
  bill      bill[]
  discount  discount[]
}

enum user_role {
  ADMIN
  USER
}
